<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        app:cardCornerRadius="10sp"
        android:id="@+id/cvRbDosen"
        android:layout_margin="8sp"
        app:cardElevation="8sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8sp"
            android:id="@+id/divContainerRbDosen">
            <View
                android:layout_width="5sp"
                android:layout_height="80sp"
                android:background="#ffb300"
                android:layout_gravity="center"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/semicolon"
                android:id="@+id/ciRbFotoDosen"
                android:layout_marginLeft="8sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b2b2b2"
                android:layout_marginLeft="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="8sp"
                android:layout_weight="1">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbNamaDosen"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jabatan Dosen"
                    android:id="@+id/tvRbJabatanDosen"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Dosen"
                    android:id="@+id/tvRbIDdosen"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone"/>
            </LinearLayout>
            <View
                android:layout_width="5sp"
                android:layout_height="80sp"
                android:background="#ffb300"
                android:layout_marginLeft="8sp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>