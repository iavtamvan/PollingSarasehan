<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:cardCornerRadius="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Dari NPM"
                android:maxLength="12"
                android:background="@color/colorPrimaryDark"
                android:gravity="center|left"
                android:paddingLeft="4dp"
                android:textColor="#FFF"
                android:padding="4sp"
                android:id="@+id/tvListKomentarDari"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="8sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="4sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SARAN"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="45sp"
                        android:layout_height="1sp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="4sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SARAN Sesungguhya"
                        android:textColor="#000"
                        android:id="@+id/tvKomentarSaran"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="4sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="4sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KRITIK"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="45sp"
                        android:layout_height="1sp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="4sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kritik Sesungguhya"
                        android:textColor="#000"
                        android:id="@+id/tvKomentarKRITIK"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Untuk"
                android:background="@color/colorPrimary"
                android:gravity="center|left"
                android:paddingLeft="4dp"
                android:textColor="#FFF"
                android:padding="4sp"
                android:id="@+id/tvListKomentarUntuk"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>