<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardElevation="8sp"
        android:layout_margin="10sp"
        android:id="@+id/cvSurveyDetail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8sp"
            android:id="@+id/divContainerRbDosen">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:id="@+id/ciSurveyDosen"
                android:layout_marginLeft="8sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b2b2b2"
                android:layout_marginLeft="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="8sp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Nama Dosen"
                    android:textColor="#000"
                    android:id="@+id/tvSurveyNamaDosen"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Suara"
                        android:id="@+id/tvRSurveySuaraDosen"
                        android:gravity="right"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Dosen"
                    android:id="@+id/tvRbIDdosen"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone"/>
            </LinearLayout>
            <View
                android:layout_width="5sp"
                android:layout_height="80sp"
                android:background="#ffb300"
                android:layout_marginLeft="8sp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:background="@color/colorPrimary"/>

    </android.support.v7.widget.CardView>
</LinearLayout>